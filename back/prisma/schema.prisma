generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// Enums
enum Role {
  ADMIN
  CLIENT
  PROFESSIONAL
}

enum Status {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

enum BonusType {
  BOOKING_POINTS // Pontos por agendamento
  LOYALTY // Fidelidade (ex.: após X agendamentos)
}

enum CouponType {
  PERCENTAGE // Desconto percentual (ex: 10%)
  FIXED // Desconto fixo (ex: R$ 50)
  FREE // Cupom 100% de desconto
}

enum CouponScope {
  GLOBAL // Válido para todos
  SERVICE // Válido para um serviço específico
  PROFESSIONAL // Válido para um profissional específico
}

// Tabelas principais
model User {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  password      String
  phone         String   @unique
  role          Role     @default(CLIENT)
  emailVerified Boolean  @default(false)
  active        Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relações
  professional       Professional?
  bookings           Booking[]
  VerificationToken  VerificationToken[]
  Log                Log[]
  PasswordResetToken PasswordResetToken[]
  UserBonus          UserBonus[]
  BonusTransaction   BonusTransaction[]
  BonusRedemption    BonusRedemption[]
  Coupon             Coupon[]
  CouponRedemption   CouponRedemption[]

  @@map("users")
}

model Professional {
  id                    String                 @id @default(uuid())
  userId                String                 @unique
  user                  User                   @relation(fields: [userId], references: [id])
  specialty             String
  bio                   String?
  avatarUrl             String?
  document              String?
  active                Boolean                @default(true)
  bookings              Booking[]
  businessHours         BusinessHours[]
  holidays              Holiday[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt
  ServiceProfessional   ServiceProfessional[]
  Coupon                Coupon[]

  @@map("professionals")
}

model BusinessHours {
  id             String       @id @default(uuid())
  professional   Professional @relation(fields: [professionalId], references: [id])
  professionalId String
  dayOfWeek      Int // 0-6 (Sunday-Saturday)
  opensAt        String // Format "HH:MM"
  closesAt       String // Format "HH:MM"
  breakStart     String? // Format "HH:MM"
  breakEnd       String? // Format "HH:MM"
  active         Boolean      @default(true)

  @@unique([professionalId, dayOfWeek])
  @@map("business_hours")
}

model Holiday {
  id             String       @id @default(uuid())
  professional   Professional @relation(fields: [professionalId], references: [id])
  professionalId String
  date           DateTime
  reason         String
  createdAt      DateTime     @default(now())

  @@index([professionalId, date])
  @@map("holidays")
}

model Service {
  id            String                @id @default(uuid())
  name          String
  description   String?
  category      String?
  active        Boolean               @default(true)
  professionals ServiceProfessional[]
  BookingItem   BookingItem[]
  updatedAt     DateTime              @updatedAt
  createdAt     DateTime              @default(now())
  Coupon        Coupon[]

  @@map("services")
}

model ServiceProfessional {
  id             String        @id @default(uuid())
  service        Service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId      String
  professional   Professional  @relation(fields: [professionalId], references: [id])
  professionalId String
  price          Float
  duration       Int
  BookingItem    BookingItem[]

  @@map("service_professional")
}

model Booking {
  id               String             @id @default(uuid())
  user             User               @relation(fields: [userId], references: [id])
  userId           String
  professional     Professional       @relation(fields: [professionalId], references: [id])
  professionalId   String
  startDateTime    DateTime
  endDateTime      DateTime
  status           Status             @default(PENDING)
  notes            String?
  totalAmount      Float
  pointsUsed       Int                @default(0)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  canceledAt       DateTime?
  confirmedAt      DateTime?
  coupon           Coupon?            @relation(fields: [couponId], references: [id])
  couponId         String?
  couponDiscount   Float?             @default(0)
  items            BookingItem[]
  BonusTransaction BonusTransaction[]
  BonusRedemption  BonusRedemption[]
  CouponRedemption CouponRedemption[]

  @@map("bookings")
}

model BookingItem {
  id                    String              @id @default(uuid())
  booking               Booking             @relation(fields: [bookingId], references: [id])
  bookingId             String
  serviceProfessional   ServiceProfessional @relation(fields: [serviceProfessionalId], references: [id])
  serviceProfessionalId String

  name      String
  price     Float
  duration  Int
  Service   Service? @relation(fields: [serviceId], references: [id])
  serviceId String?

  @@map("booking_items")
}

model VerificationToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("verification_tokens")
}

model Log {
  id         String   @id @default(uuid())
  user       User?    @relation(fields: [userId], references: [id])
  userId     String? // Who performed the action (can be null for system)
  type       String // Event type: "STATUS_UPDATE", "CANCELAMENTO", etc.
  description String // Descriptive text of what happened
  reference  String? // ID of affected entity (ex: bookingId, serviceId etc)
  entity     String? // Entity name: "Booking", "Service", "User"
  userAgent  String? // Browser or client info (optional)
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([entity, reference])
  @@map("logs")
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

// Tabela para armazenar os bônus dos usuários
model UserBonus {
  id        String    @id @default(uuid())
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  points    Int       @default(0)
  type      BonusType
  expiresAt DateTime? // Opcional: definir validade dos pontos
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([userId, type])
  @@index([expiresAt])
  @@map("user_bonus")
}

// Tabela para registrar transações de pontos
model BonusTransaction {
  id          String    @id @default(uuid())
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  booking     Booking?  @relation(fields: [bookingId], references: [id])
  bookingId   String?
  points      Int // Pode ser positivo (ganho) ou negativo (uso)
  type        BonusType
  operation   String    @default("CREDIT") // "CREDIT" ou "DEBIT"
  description String? // Ex.: "Resgate de pontos para agendamento "
  createdAt   DateTime  @default(now())

  @@map("bonus_transactions")
}

model BonusRedemption {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  booking    Booking  @relation(fields: [bookingId], references: [id])
  bookingId  String
  pointsUsed Int
  discount   Float // Valor do desconto aplicado em reais
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([bookingId])
  @@map("bonus_redemptions")
}

// Tabela para armazenar os cupons
model Coupon {
  id              String      @id @default(uuid())
  code            String      @unique
  description     String?
  type            CouponType
  value           Float // Percentual ou valor fixo, dependendo do type
  scope           CouponScope @default(GLOBAL)
  maxUses         Int? // Número máximo de usos (null = ilimitado)
  uses            Int         @default(0) // Número de vezes já usado
  startDate       DateTime    @default(now())
  endDate         DateTime? // Data de expiração (null = sem expiração)
  minBookingValue Float? // Valor mínimo do agendamento para aplicar
  active          Boolean     @default(true)
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relações para cupons com escopo específico
  service        Service?      @relation(fields: [serviceId], references: [id])
  serviceId      String?
  professional   Professional? @relation(fields: [professionalId], references: [id])
  professionalId String?

  // Relação com os resgates
  redemptions CouponRedemption[]
  Booking     Booking[]
  User        User?              @relation(fields: [userId], references: [id])
  userId      String?

  @@index([code, active])
  @@map("coupons")
}

// Tabela para registrar os resgates de cupons
model CouponRedemption {
  id         String   @id @default(uuid())
  coupon     Coupon   @relation(fields: [couponId], references: [id])
  couponId   String
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  booking    Booking? @relation(fields: [bookingId], references: [id])
  bookingId  String?
  discount   Float // Valor do desconto aplicado
  redeemedAt DateTime @default(now())

  @@index([couponId, userId])
  @@index([bookingId])
  @@map("coupon_redemptions")
}
